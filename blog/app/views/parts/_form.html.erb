<%= form_for(part) do |f| %>
  <% if part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>

      <ul>
      <% part.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :part_number %>
    <%= f.text_field :part_number %>
  </div>

  <div class="field">
    <%= f.label :assemblies %>
    <%= f.collection_check_boxes(:assembly_ids, Assembly.all, :id, :name)  do |b| %>
      <%= b.check_box %>
      <%= b.label %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
